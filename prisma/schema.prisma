datasource db {
    provider = "postgresql"
    url      = env("POSTGRES_PRISMA_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id        String    @id @default(cuid())
    name      String
    email     String    @unique
    picture   String
    createdAt DateTime  @default(now())
    updatedAt DateTime  @default(now())
    palettes  Palette[] @relation("UserPalettes")

    @@map("users")
}

model Palette {
    id          String   @id @default(cuid())
    name        String
    description String
    userId      String
    palleteJson String
    image       String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @default(now())
    user        User     @relation(fields: [userId], references: [id], name: "UserPalettes")

    @@map("palette")
}
